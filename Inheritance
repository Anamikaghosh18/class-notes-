#include <iostream>
#include<string.h>
using namespace std;
class Student{
    private:
    int roll_no;
    protected:
    char section [10];
    public:
    void get_rno(){
        cout << "\n enter the roll no: ";
        cin >> roll_no;
        
    }
    void show_rno(){
        cout << "roll no: " << roll_no;
    }
};
class result:protected Student{
    private:
    float fees;
    public:
    void get_data(){
        get_rno();
        cout << "\n enter fees: " ;
        cin >> fees;
        cout << "enter serction: ";
        cin >> section;
    }
    void display(){
        show_rno();
        cout << "\n fees: " << fees;
        cout << "\n section: " << section;
    }
    
};
int main() {
    result obj1;
    obj1.get_data();
    obj1.display();
    //obj1.get_rno();
    //obj1.show_rno();
